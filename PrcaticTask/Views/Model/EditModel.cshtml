@model Model

<h2>Редактирование модели</h2>

<form asp-action="EditModel" asp-controller="Model" asp-route-id="@Model.Id">
    <div class="form-group">
        <label asp-for="ModelName">Название модели</label>
        <input asp-for="ModelName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="ActiveStatus">Статус</label>
        <select asp-for="ActiveStatus" class="form-control">
            <option value="1">Активен</option>
            <option value="0">Не активен</option>
        </select>
    </div>
    <div class="form-group">
        <label asp-for="BrandId">Марка</label>
        <select asp-for="BrandId" asp-items="@(new SelectList(ViewBag.Brands, "Id", "BrandName"))" class="form-control">
            <option value="">Select Brand</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
</form>
