@model IEnumerable<IGrouping<Brand, Model>>

<h1>Все модели</h1>

@foreach (var group in Model)
{
    <h2>@group.Key?.BrandName</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Название модели</th>
                <th>Статус</th>
                <th>Изменение</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in group)
            {
                <tr class="@((item.ActiveStatus == 0) ? "table-secondary" : "")">
                    <td>@item.ModelName</td>
                    <td>
                        @if (item.ActiveStatus == 1)
                        {
                            <a>Активный</a>
                        }
                        else
                        {
                            <a>Не активный</a>
                        }
                    </td>
                    <td>
                        <a asp-action="EditModel" asp-route-id="@item.Id">Редактировать</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
